{% extends "TiempoAdminBundle:BASE:base.html.twig" %}
{% block title %}{{titulo}}{% endblock %}
{% block container %}
<!-- Main content -->
<div class="col-xs-12">
    <div class="box">
        <div class="box-body">
    <table id="estados" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Estado</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
        {% for estado in estados %}
            <tr>
                <td>{{ estado.id }}</td>
                <td>{{ estado.estado }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('administrador_estados_edit', { 'id': estado.id }) }}">Editar</a>
                </td>
                <td>
                    <a class="btn btn-danger" href="{{ path('administrador_estados_delete', { 'id': estado.id }) }}">Eliminar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
        <!-- /.box-body -->
    </div>
<!-- /.box -->
</div>
<!-- /.col -->
    
{% endblock %}
